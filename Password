import random

simbolos = "+-/*!&$#?=@abcdefghijklnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"

print("\n Creemos una contraseña segura")
print()

Almacenar = int(input("Digita la Longitud que te gustaría para tu contraseña: \n"))

password = ""

for i in range (Almacenar):
    password += random.choice(simbolos)

print("\n Tu contraseña segura es: ", password)
